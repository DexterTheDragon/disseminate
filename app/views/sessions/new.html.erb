<div class="row">
  <div class="span10 offset1">
    <% if logged_in? %>
      <a href="<%= logout_path %>" class="btn"><%= t('auth.logout') %></a>
    <% else %>
      <div class="text-center">
        <a href="/auth/github" class="btn"><i class="icon-github-alt"></i> <span><%= t('auth.github_html') %></span></a>
        <% if Rails.env.development? %>
          <a href="/auth/developer" class="btn"><i class="icon-linux"></i><span><%= t('auth.developer') %></span></a>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
