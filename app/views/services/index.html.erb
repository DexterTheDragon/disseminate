<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Data</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.type %></td>
        <td><%= service.data %></td>
        <td><%= link_to 'Show', [@group, service.becomes(Service)] %></td>
        <td><%= link_to 'Edit', edit_group_service_path(@group, service) %></td>
        <td><%= link_to 'Destroy', [@group, service.becomes(Service)], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

